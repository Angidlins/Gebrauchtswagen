@model IEnumerable<Gebrauchtswagen.Models.Kunde>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vorname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nachname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Strasse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vorname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nachname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plz)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strasse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KundeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.KundeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.KundeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
